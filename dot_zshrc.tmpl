
zstyle ':antidote:bundle' use-friendly-names 'yes'
zstyle ':zsh-utils:plugins:history' use-xdg-basedirs 'no'

zstyle ':completion:*' list-packed true           # Compact display
zstyle ':completion:*' list-suffixes true         # Show suffixes when completing
zstyle ':completion:*' squeeze-slashes true       # Squeeze multiple slashes to one
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|=*' 'l:|=* r:|=*'  # Case-insensitive matching
zstyle ':completion:*' menu select                # Enable menu selection
zstyle ':completion:*' special-dirs true          # Include . and .. in completions
zstyle ':completion:*' verbose yes                # Verbose completions

# Better file/directory completion
zstyle ':completion:*' file-sort modification     # Sort by modification time
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}  # Colored completions

source ${ZDOTDIR:-~}/.antidote/antidote.zsh

# config home
export XDG_CONFIG_HOME=~/.config

if type brew &>/dev/null; then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
fi

{{ if eq .profile "personal" -}}
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/rbw/ssh-agent-socket"
{{- end }}

# set omz variables
ZSH=$(antidote path ohmyzsh/ohmyzsh)
ZSH_CACHE_DIR="${XDG_CACHE_HOME:-$HOME/.cache}/oh-my-zsh"
[[ -d $ZSH_CACHE_DIR ]] || mkdir -p $ZSH_CACHE_DIR
[[ -d $ZSH_CACHE_DIR/completions ]] || mkdir -p $ZSH_CACHE_DIR/completions
antidote load

eval "$(starship init zsh)"

function zvm_vi_yank() {
	zvm_yank
	echo ${CUTBUFFER} | pbcopy
	zvm_exit_visual_mode
}

# Define an init function and append to zvm_after_init_commands
function fzf_init() {
  [ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
}
zvm_after_init_commands+=(fzf_init)

export CONFIG_DIR="$HOME/.config/lazygit"
export K9SCONFIG=~/.config/k9s/

# optionally: local .zshrc
[ -f ~/.zshrc-local ] && source ~/.zshrc-local

# Go path:
path+=("$(go env GOPATH)/bin")
path+=("$HOME/.krew/bin")

export PATH
export EDITOR=nvim

# kubernetes helper functions
function klogin() {
  unset KUBECONFIG
  rm -rf ~/.kube/kubesess/
  kubectl-login --login-methods YubiKey
}

if type brew &>/dev/null; then
  KUBESESS_COMPLETION_FILE=$(brew --prefix)/share/zsh/site-functions/kubesess.sh
  [ -f $KUBESESS_COMPLETION_FILE ] && source $KUBESESS_COMPLETION_FILE
fi


function plugins_init() {
  eval "$(atuin init zsh)"
  eval "$(zoxide init zsh)"
}
zvm_after_init_commands+=(plugins_init)

